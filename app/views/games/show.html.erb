<div id="game">
  <div class="main">
    <%= render "options", game: @game %>
    <%= render @game.round.template if @game.playing %>
    <%= render @game.memes %>
  </div>

  <div class="sidebar">
    <%= render "scoreboard", game: @game %>
  </div>

  <div class="bottom">
    <%= render "hand", game: @game %>
  </div>
</div>
